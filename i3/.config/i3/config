# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+u [instance="__scratchpad"] scratchpad show; [instance="__scratchpad"] move position center
for_window [instance="__scratchpad"] move scratchpad 
for_window [instance="__scratchpad"] resize set 2400 1600
exec --no-startup-id alacritty --instance "__scratchpad"

bindsym $mod+i [instance="__scratchpad_small"] scratchpad show; [instance="__scratchpad_small"] move position center
for_window [instance="__scratchpad_small"] move scratchpad 
for_window [instance="__scratchpad_small"] resize set 1400 1000
exec --no-startup-id alacritty --instance "__scratchpad_small"

